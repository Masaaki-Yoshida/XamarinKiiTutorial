<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinKiiTutorial.CreateObject">
  
  <ContentPage.Content>

    <StackLayout
         Padding="0,20,0,0"
         Spacing="10">

      <StackLayout
        Orientation="Vertical"
        Padding="40,40,40,0"
        Spacing="20">

        <Label
          Text ="Create an application scope object" >
        </Label>

        <Button
          x:Name="_CreateObject"
          Text="Create KiiObject"
          HorizontalOptions="FillAndExpand"
          VerticalOptions="Center">
        </Button>

      </StackLayout>
    </StackLayout>

  </ContentPage.Content>
  
</ContentPage>